{
    "Kafka": {
        "GroupId": "weather-monitoring"
    },
    "ConnectionStrings": {
        "Mongo": "",
        "Redis": ""
    },
    "Mongo": {
        "DbName": "mound-road"
    },
    "NOAA": {
        "User-Agent": "ODE-WeatherMonitoring"
    },
    "Redis": {
        "StatusTTL": 300
    },
    "NLog": {
        "throwConfigExceptions": true,
        "targets": {
            "console": {
                "type": "Console",
                "layout": "${longdate}|${pad:padding=5:inner=${level:uppercase=true}}|${logger}|${message}${onexception:inner=|${exception:format=tostring}${newline}${exception:format=tostring:maxInnerExceptionLevel=10}}"
            }
        },
        //"rules": {
        //    "logger": "*"
        //    "minLevel": "Info",
        //    "writeTo": "console"
        //}
        "rules": [
            {
                "logger": "System.*",
                "maxLevel": "Info",
                "final": true
            },
            {
                "logger": "Microsoft.*",
                "maxLevel": "Info",
                "final": true
            },
            {
                "logger": "*",
                "minLevel": "Info",
                "writeTo": "console"
            }
        ]
    }
}

